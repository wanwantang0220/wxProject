/* pages/home/home.wxss */

.contain {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.header_view {
  width: 100%;
  background: #937eff;
  height: 56px;
  justify-content: center;
  align-items: center;
  /* 需要加上 */
  line-height: 56px;
  display: flex;
  flex-direction: row;
}

.header_view .header_title {
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.header_view .header_image {
  width: 36px;
  height: 36px;
  margin: 10px;
}

.swiper {
  width: 100%-20px;
  height: 300rpx;
  margin: 10px;
  border-radius: 5px;
  background: #937eff;
  align-items: center;
}

.swiper_item {
  display: flex;
  flex: row;
  width: 100%;
  height: 100%;
  padding: 5px;
}

.swiper .banner_image {
  flex: 1;
  width: 200rpx;
  height: 120px;
  border-radius: 5px;
  margin: 20rpx;
}

.swiper .banner_right {
  flex: 2;
  width: 200rpx;
  height: 120px;
  border-radius: 5px;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

.banner_right_text1 {
  font-size: 14px;
  color: #fff;
  padding: 5rpx;
}

.banner_right_text2 {
  font-size: 12px;
  color: #fff;
  padding: 2rpx;
}

.banner_right_cates {
  display: flex;
  height: 100rpx;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  /* justify-content: center; */
}

.banner_right_text3 {
  font-size: 12px;
  color: #fff;
  padding: 2rpx;
  margin-top: 10rpx;
  align-items: center;
}

.cate_view {
  width: 100%-20px;
  background: #937eff;
  border-radius: 5px;
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: row;
}

.cate_item {
  width: 120px;
  height: 80px;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.cate_item .cate_item_text {
  font-size: 12px;
  color: #fff;
  /* height: 100%; */
}

.cate_item .cate_item_image {
  width: 45px;
  height: 45px;
  border-radius: 26px;
  margin: 4px;
  align-content: center;
  align-items: center;
  /* background: #00ceff; */
}

.list_view {
  width: 100%-20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.list_item {
  width: 30%;
  background-color: white;
  margin: 10rpx;
  border-radius: 10rpx;
  background: #937eff;
}

.list_item_container {
  width: 30%-20rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.list_item_image {
  width: 100%;
  height: 200rpx;
  padding-bottom: 10rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.list_item_text {
  font-size: 12px;
  color: #fff;
  padding-bottom: 10rpx;
}
