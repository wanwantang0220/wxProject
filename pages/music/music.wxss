/* pages/music/music.wxss */

.contain {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.view_item {
  width: 100%-40rpx;
  margin: 20rpx;
  display: flex;
  background: #937eff;
  flex-direction: column;
  border-radius: 10rpx;
  /* align-items: center; *//* justify-content: "center"; */
}

.view_title {
  display: flex;
  flex-direction: row;
  background: #937eff;
  border-radius: 10rpx;
}

.view_title .image_pic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  margin: 20rpx;
  /* align-items: center;
  justify-content: "center"; */
}

.view_title .view_title_right {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: left;
  justify-content: "center";
  margin: 20rpx;
  margin-top: 40rpx;
}

.view_content {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}

.text_content {
  align-items: center;
  justify-content: "center";
  color: #fff;
  text-align: left;
  font-size: 12px;
}

.text_title {
  align-items: center;
  justify-content: "center";
  margin-bottom: 20rpx;
  color: #fff;
  text-align: left;
  font-size: 16px;
}
