/* pages/detail/detail.wxss */

.contain {
  display: flex;
  flex-direction: column;
  /* background: #fff; */
  background: #f5f5f5;
}

.header_view {
  width: 100%;
  background: #937eff;
  height: 56px;
  justify-content: center;
  align-items: center;
  /* 需要加上 */
  line-height: 56px;
  display: flex;
  flex-direction: row;
}

.header_view .header_title {
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.image_view {
  display: flex;
  width: 100%-300rpx;
  padding: 20rpx;
  padding-left: 150rpx;
  padding-right: 150rpx;
  justify-content: "flex-end";
  background: linear-gradient(#937eff, #fff);
}

.image {
  flex: 1;
  width: 200rpx;
  height: 500rpx;
  border-radius: 10rpx;
  margin: 20rpx;
}

.info {
  display: flex;
  flex-direction: row;
  background: #f5f5f5;
}

.info_left {
  margin: 20rpx;
  flex: 2;
  flex-direction: column;
}

.info_right {
  flex: 1;
  flex-direction: column;
  background: #fff;
  box-shadow: 1px 1px 1px 1px rgb(233, 230, 230);
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 20rpx;
  align-items: center;
  justify-content: "center";
}

.info_title {
  font-size: 16px;
  color: #333;
  font-weight: bold;
  padding-bottom: 10rpx;
}

.info_text {
  font-size: 12px;
  color: #9d9d9d;
}

.intro_view {
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  margin: 10rpx;
  padding: 10rpx;
}

.intro_text {
  font-size: 11px;
  padding: 2rpx;
  color: #666;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

