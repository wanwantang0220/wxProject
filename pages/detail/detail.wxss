.line {
  width: 100%;
  height: 2rpx;
  line-height: 2rpx;
  background: #fff;
}

.directors_view {
  display: flex;
  margin: 20rpx;
  flex-direction: column;
  background: #f5f5f5;
}

.directors_view_item {
  /* margin: 10rpx; */
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
  width: 100rpx;
  flex-direction: row;
}

.directors_image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 80rpx;
}

.directors_text {
  width: 100%;
  font-size: 12px;
  color: #9d9d9d;
  align-items: center;
  justify-content: "flex-end";
  text-align: center;
  padding: 10rpx;
}

.actors_view {
  display: flex;
  margin: 20rpx;
  flex-direction: column;
  background: #f5f5f5;
}

.actors__view_item {
  display: flex;
  flex-direction: row;
}

.actors_image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 80rpx;
}

.rating_view {
  /* background: #fff; */
  display: flex;
  height: 60rpx;
  flex-direction: row;
  margin: 20rpx;
  align-items: center;
  justify-content: "center";
}

.rater {
  margin-left: 40rpx;
  align-items: center;
  justify-content: "center";
}

.rating_text {
  font-size: 12px;
  color: #9d9d9d;
  text-align: center;
}
